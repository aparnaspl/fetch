<?xml version="1.0" encoding="UTF-8"?>
<project name="MyProject" default="phpcs">
    <property name="phpcs"   value="phpcs"/>
 
    <target name="phpcs" description="Perform syntax check of sourcecode files">
        <apply executable="php" taskname="phpcs" failonerror="true">
            <arg value="-l" />
            <fileset dir="${basedir}/">
                <include name="**/*.php" />
            </fileset>
            
        </apply>
    </target>
</project>
